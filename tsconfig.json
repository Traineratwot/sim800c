{
    "compilerOptions": {
        "lib": [
            "es2018"
        ],
        "module": "commonjs",
        "declaration": true,
        "target": "es2018",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}